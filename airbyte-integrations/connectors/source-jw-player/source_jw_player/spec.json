{
  "documentationUrl": "https://docsurl.com",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Jw Player Spec",
    "type": "object",
    "required": ["api_secret"],
    "additionalProperties": true,
    "properties": {
      "api_secret": {
        "type": "string",
        "description": "JW Player API Secret",
        "pattern": "^[a-zA-Z0-9-]+$"
      },
      "site_id": {
        "type": "string",
        "description": "JW Player Site ID",
        "pattern": "^[a-zA-Z0-9]+$"
      },
      "media_id": {
        "type": "string",
        "description": "JW Player Media ID",
        "pattern": "^[a-zA-Z0-9]+$"
      },
      "tag_name": {
        "type": "string",
        "description": "JW Player Tag",
        "pattern": "^[a-zA-Z0-9]+$",
        "examples": ["rafting", "adventure", "travel"]
      }
    }
  }
}
